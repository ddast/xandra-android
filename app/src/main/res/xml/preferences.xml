<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <ListPreference
      android:key="pref_theme"
      android:title="@string/pref_theme_title"
      android:dialogTitle="@string/pref_theme_title"
      android:entries="@array/pref_theme_entries"
      android:entryValues="@array/pref_theme_entryValues"
      android:defaultValue="@string/pref_theme_default" />
    <EditTextPreference
        android:key="pref_port"
        android:title="@string/pref_port_title"
        android:dialogTitle="@string/pref_port_title"
        android:defaultValue="@string/pref_port_default"
        android:inputType="number"
        android:hint="@string/pref_port_default" />
    <EditTextPreference
        android:key="pref_sensitivity"
        android:title="@string/pref_sensitivity_title"
        android:dialogTitle="@string/pref_sensitivity_title"
        android:defaultValue="@string/pref_sensitivity_default"
        android:inputType="numberDecimal|numberSigned"
        android:hint="@string/pref_sensitivity_default" />
    <EditTextPreference
        android:key="pref_tapdelay"
        android:title="@string/pref_tapdelay_title"
        android:dialogTitle="@string/pref_tapdelay_title"
        android:defaultValue="@string/pref_tapdelay_default"
        android:inputType="number"
        android:hint="@string/pref_tapdelay_default" />
    <EditTextPreference
        android:key="@string/pref_touchslop"
        android:title="@string/pref_touchslop_title"
        android:dialogTitle="@string/pref_touchslop_title"
        android:defaultValue="@string/pref_touchslop_default"
        android:inputType="number"
        android:hint="@string/pref_touchslop_default" />
</PreferenceScreen>
